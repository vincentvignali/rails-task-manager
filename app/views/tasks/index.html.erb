<div class="container mt-5">
  <h1>List of all tasks</h1>
  <i class="fas fa-thumbtack text-primary"></i>
  <ul class="list-unstyled">
      <% @tasks.each do |task| %>
        <li class="list-group-item d-flex justify-content-between">
          <strong> <%= link_to task.title, task_path(task), class:"link-warning" %> </strong>
          <% if task.completed %>
          <i class="fas fa-check text-primary"></i>
          <% else %>
          <i class="fas fa-times-circle text-primary"></i>
        </li>
        <% end %>
      <% end %>
  </ul>
    <%= link_to "Add a new tasks", new_task_path, class:"btn btn-primary" %>
</div>
